<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.BaseEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:textColorHint">@color/colorLightBlack</item>
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="AppTheme.AppEditText.Otp" parent="Widget.BaseEditText">
        <item name="android:paddingStart">@dimen/_30dp</item>
        <item name="android:paddingEnd">@dimen/_30dp</item>
        <item name="android:paddingTop">@dimen/_20dp</item>
        <item name="android:paddingBottom">@dimen/_20dp</item>
        <item name="android:layout_marginTop">@dimen/_20dp</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
    </style>

    <style name="Widget.BaseTextView" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/_26sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.AppTextView.PrivatePolicy" parent="Widget.BaseTextView">
        <item name="android:layout_marginBottom">@dimen/_10dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:gravity">center</item>
    </style>


</resources>
