<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_80dp"
    android:layout_height="@dimen/_90dp"
    android:layout_margin="@dimen/_10dp"
    android:background="@drawable/bg_recycle_view">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewDayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20dp"
        android:gravity="center"
        android:text="@string/label_day_name"
        app:layout_constraintBottom_toTopOf="@id/textViewDayNumber"
        android:textColor="@color/colorDarkGray"
        android:layout_marginBottom="@dimen/_5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewDayNumber"
        android:layout_width="@dimen/_0dp"
        android:layout_height="@dimen/_0dp"
        app:layout_constraintTop_toBottomOf="@id/textViewDayName"
        android:text="@string/label_day_number"
        android:gravity="center"
        android:background="@drawable/bg_text_view"
        android:textSize="@dimen/_20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>